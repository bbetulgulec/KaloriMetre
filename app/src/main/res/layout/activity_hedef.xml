<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.betulgulec.app.anasayfa">


    <!-- DÜŞÜLMEK İSTENİLEN KİLO -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="469dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Düşülmek istenilen kilo:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/kilotext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textSize="16sp" />


    </LinearLayout>


   <!-- PERİYOT BELİRLEME  TEXT -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="124dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:text="Lütfen istediğiniz kalori takipin zamanını belirleyin"
            android:textSize="16sp" />


    </LinearLayout>

    <!--SPINNER KULLANIMI -->

    <Spinner
        android:id="@+id/spinnerperiyot"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="368dp" />

    <TextView
        android:id="@+id/spinnerperiyottext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="353dp"
        android:layout_marginBottom="336dp"
        android:text="" />

    <!--BUTTON İLE KAYDETME -->

    <Button
        android:id="@+id/button2"
        style="@style/btnKayıt"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="329dp"
        android:text="Kalori Miktarı Belirle" />

    <!-- HEDEFLENE GÜNLÜK KALORİ -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_marginBottom="85dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Günlük Kalori"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextKilo111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Verilecek kilo"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextKilo11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint=""
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="565dp" />



        <ImageButton
            android:id="@+id/istatistik"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/stats" />

        <ImageButton
            android:id="@+id/rapor"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="142dp"
            android:onClick="yemeklistesi"/>

        <ImageButton
            android:id="@+id/profil"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profile"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="280dp" />


    </LinearLayout>







</RelativeLayout>