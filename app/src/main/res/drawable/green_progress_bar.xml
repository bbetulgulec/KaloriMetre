<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#CFCFCF" /> <!-- Arkaplan rengi -->
        </shape>
    </item>
    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#4CAF50" /> <!-- İlerleme rengi, varsayılan olarak yeşil -->
            </shape>
        </clip>
    </item>
    <!-- Secondary Progress (bu, yarısından fazlası dolunca kırmızı olacak) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#FF0000" /> <!-- İkincil ilerleme rengi, varsayılan olarak kırmızı -->
            </shape>
        </clip>
    </item>
</layer-list>
